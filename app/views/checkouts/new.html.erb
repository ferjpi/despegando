<div class="container">
  <div class="title text-center">
    <h1>CHECKOUT</h1>
  </div>

  <div class="checkout__container">
    <div class="checkout__box">
      <div class="checkout__details">

        <p class="checkout__details--description">
          <em>Estos son los datos de tu vuelo, por favor confirma y presionas ACEPTAR si estas de acuerdo</em>
        </p>

        <div class="checkout__details--fly">
          <div class="departure">
            <span>Origen: </span>
            <%= @vuelo.departure%>
          </div>
          <div class="destination">
            <span>Destino: </span>
            <%= @vuelo.destination %>
          </div>
        </div>

        <div class="checkout__details--checkbox">
          <em>Ida y Vuelta</em>
          <%= check_box_tag 'Ida y Vuelta',  nil, true %>
        </div>

        <div class="checkout__details--user">
          <div class="name">
            <span>Nombre: </span>
            <%= current_user.name%>
          </div>
          <div class="last_name">
            <span>Apellidos: </span>
            <%= current_user.last_name%>
          </div>
        </div>

        <div class="checkout__details--data">
          <div class="email">
            <span>Correo: </span>
            <%= current_user.email%>
          </div>
          <div class="passengers">
            <span>NÂº Pasajeros: </span>
            <%= @people %>
          </div>
        </div>

        <div class="checkout_buttons mt-2">
          <div class="agree">
            <%= link_to "ACEPTO", vuelo_checkouts_path(people: @people), method: :post, class:"btn btn-outline-success btn-lg" %>
          </div>
          <div class="refuse">
            <%= link_to "RECHAZO", root_path, class:"btn btn-lg btn-outline-danger", notice: "Vuelo Cancelado" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>