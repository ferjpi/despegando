<div class="home-container">
  <div class="searchbox p-3">
    <div class="box">
      <!--box header -->
      <div class="box-header">
        <div class="box-header--title">
          <h2>Vuelos baratos</h2>
        </div>
      </div>
      <!--box row -->
      <div class="box-row row">

        <!--box-row--inputs -->
        <div class="box-row--inputs col-6 row">
          <%= form_tag(root_path,class: "row")  do %>
          <div class="box-row--input col-5">
            <%= label_tag(:q, 'Origen') %>
            <%= text_field_tag(:q,  "Ingresa desde donde viajas") %>
          </div>
          <div class="box-row--input col-5">
            <%= label_tag(:q, 'Destino') %>
            <%= text_field_tag(:q,  "Ingresa hacia donde viajas")  %>
          </div>
          <%end%>
        </div>

        <!--box-row--passenger -->
        <div class="box-row--passenger col-4">
          <div class="box-row--container">
          <%= form_tag(root_path,class: "")  do %>
            <%= label_tag(:p, 'Pasajeros')%>
            <div class="box-row--input">
              <%= text_field_tag(:p,  "personas")  %>
            </div>
          <% end  %>
          </div>
        </div>

        <!--box-row--button -->
        <div class="box-row--button col-2">
          <div class="box-row--button--container">
            <%= link_to 'Buscar', root_path, class: "btn btn-lg" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>